@model GameBeta.Models.Pack
@{
	ViewBag.Title = "Добавление колоды";
}
<form asp-action="create" asp-controller="home">
	<div class="form-group">
		<label asp-for="Name" class="control-label">Имя колоды</label>
		<input type="text" asp-for="Name" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Cards" class="control-label">Количество карточек</label>
		<input type="number" asp-for="Cards" class="form-control" />
	</div>
	<div class="form-group">
		<input type="submit" value="Создать" class="btn btn-default" />
	</div>
</form>